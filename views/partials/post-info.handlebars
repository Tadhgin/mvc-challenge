<!-- Post article -->
<article class="post">
    <!-- Post content -->
    <div class="whole-post">
        <!-- Post info section -->
        <div class="info-section">
            <!-- Post title -->
            <div class="post-name">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>

            <!-- Post author and date -->
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}} </b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        </div>

        <!-- Post main content -->
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>
